# ------------------------------------------------
# Citadel Project Environment Configuration
# ------------------------------------------------
# Copy this file to .env and fill in your values.
# DO NOT COMMIT the .env file to version control.

# --- General ---
LOG_LEVEL=INFO

# --- Security ---
# A strong, randomly generated key for securing the API gateway and services.
# Use 'openssl rand -hex 32' to generate a new key.
API_KEY="citadel-secret-key-replace-this"

# --- Local Agent ---
# Absolute path to the GGUF model file for the local agent.
# Example: /home/user/models/Llama-3-8B-Instruct-Q4_K_M.gguf
MODEL_PATH="/path/to/your/models/Llama-3-8B-Instruct-Q4_K_M.gguf"
N_GPU_LAYERS=-1
N_CTX=4096
GATEWAY_URL=http://localhost:8010
AUTONOMOUS_MODE=false

# --- Neo4j Database ---
NEO4J_USER=neo4j
NEO4J_PASSWORD=citadel-neo4j-password-replace-this

# --- TimescaleDB ---
TS_USER=tsdbadmin
TS_PASSWORD=citadel-timescaledb-password-replace-this
TS_DB=tsdb

# --- Redis & Vector Search ---
REDIS_URL=redis://redis:6379
VECTOR_INDEX_NAME=citadel-vector-index
EMBEDDING_MODEL=all-mpnet-base-v2
